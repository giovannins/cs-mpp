@{
    ViewData["Title"] = $"Produto: {@Model.Name}";
    @model Product;

}

<nav role="breadcrumb" class="white ">
    <a class="breadcrumb grey-text text-darken-2" asp-area="" asp-controller="Product" asp-action="List">Produtos</a>
    <a href="#" class="breadcrumb black-text">@Model.Name</a>
</nav>

<div class="row" style="margin-top: 2.5rem">
    <div class="col s12 m6">
        <div id="carouselDiv" class="carousel carousel-slider">
            @foreach (string image in @ViewBag.imgList)
            {
                <img class="carousel-item" src="@image" alt="img" style="border-radius: .25rem;">
            }
        </div>
    </div>
    <div class="col s12 m6">
        <h2>@Model.Name</h2>
        <div id="produtoInfo">
            <h4 class="green-text text-darken-4">R$ @Model.Price</h4>
            <p class="flow-text">@Model.Description</p>
        </div>
    </div>
</div>

@section CSS {
    <style>
        .breadcrumb::before {
            color: #999999;
        }
    </style>
}