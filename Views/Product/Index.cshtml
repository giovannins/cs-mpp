@{
    ViewData["Title"] = "Produtos";
    @model List<Product>;

}

<h1>Nossos produtos</h1>

@if (Model.Count == 0)
{
    <h2>Não há produtos</h2>
}
else
{

    <section class="row">
    @foreach (Product product in Model)
        {

            <article class="col s12 m6 l4">
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="@product.Image">
                    </div>
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">
                            @product.Name<i class="material-icons right">more_vert</i>
                        </span>
                        <p class="green-text text-darken-4">R$ @product.Price</p>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">
                            @product.Name<i class="material-icons right">close</i>
                        </span>
                        <p>
                            @product.Description
                        </p>
                        <p class="green-text text-darken-4">R$ @product.Price</p>

                        <p class="end">
                            <a class="btn red darken-4" asp-controller="Product" asp-action="View" asp-route-id="@product.Id">
                                <i class="material-icons left">remove_red_eye</i> Ver mais
                            </a>
                        </p>
                    </div>
                </div>
            </article>

        }
    </section>
}
